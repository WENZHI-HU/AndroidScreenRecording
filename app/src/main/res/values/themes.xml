<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 定义应用主题 -->
    <style name="Theme.Test" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Base application theme. -->


        <!-- 主色调 -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>

        <!-- 状态栏和导航栏颜色 -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- 按钮样式 -->
        <item name="buttonStyle">@style/ButtonStyle.Demo</item>

        <!-- 文本选择工具栏颜色 -->
        <item name="android:textColorHighlight">@color/teal_200</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/teal_700</item>
    </style>

    <!-- 自定义按钮样式 -->
    <style name="ButtonStyle.Demo" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background</item>
    </style>
</resources>
